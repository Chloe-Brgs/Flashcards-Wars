<%= turbo_frame_tag "popup_opponent" do %>
  <div class="blur">
    <div class="modal-pop-up">
      <div >
        <%= link_to "X", "#", data: {
          controller: "modals"
    # action: "modals#close"
        }, class: "cancel-button" %>
        <h3> > Select a player :</h3>


        <%= form_with url: create_path do |f| %>
          <select name="user_id" class="form-select background-white" aria-label="Default select example" required>
            <option selected>...</option>
            <%@users.each do |user|%>
              <option value="<%=user[1]%>"><%=user[0]%></option>
            <%end%>
          </select>
          <h3> > Validate ?</h3>
          <%= f.submit "Yes, sure!", class:"background-white" %>
        <% end %>
        </div>
      </div>
  </div>
<% end %>
