<div class="background-first">

  <%= turbo_frame_tag :popup_opponent do %>
  <div>
    <%= link_to "< Back to duels", duels_path, class:"btn-back" %>
  </div>
    <div class="question">
      <h1>SCORE</h1>
      <p>
        <%= @duel.user.first_name %> VS <%= @opponent.first_name %> <br>
        </p>
        <p>----------------------------</p>
        <% @duel.rounds.each_with_index do |round, index| %>
          <p>ROUND <%= index + 1 %></p>
          <p><%= round.user_score %> - <%= round.opponent_score %> </p>
          <p>----------------------------</p>
        <% end %>
    </div>

  <% end %>
</div>
