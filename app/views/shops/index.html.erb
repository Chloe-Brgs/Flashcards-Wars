<div class="background-first">
  <div class="top_card top-shop">
    <h1>SHOP</h1>
    <p>You have <%= @user.gold_count %> G</p>
  </div>

 <% if @items.present? %>
  <div class="swiper" data-controller="carousel">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
    <!-- Slides -->
      <% @items.each do |item| %>
        <div class="swiper-slide">
          <%= cl_image_tag item.photo.key, width: "100px", height: "100px" %>
          <br>
          ---------------------------------------------
          <br>
          <h3>> <strong><%= item.name %></strong></h3>
          <p>> <%= item.description %></p>
          <%# btn, path = l'action choice dans le controller shop, data = quelle turbo frame va afficher la popup %>
          <%= link_to "USE IT", choice_shops_path(item_id: item.id), data:  { turbo_frame: :popup_shop } %>
        </div>
      <% end %>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <%# <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div> %>
  </div>

<% else %>
  <div>
    <%= image_tag "question_point.png", alt: "question point", class: 'image-shop', width: "100px", height: "100px" %>
    <br>
      ---------------------------------------------
    <br>
    <p>&gt You don't have any item ! </p>
    <p>LAUNCH THE WHEEL BELOW </p>
  </div>
<% end %>

