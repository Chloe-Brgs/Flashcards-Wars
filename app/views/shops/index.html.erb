<%= turbo_frame_tag "popup_shop" do %>

<div class="background-first">

  <div class="top_card_shop ">
    <h1>SHOP</h1>
    <p>You have <%= @user.gold_count %> G</p>
  </div>

<div style="opacity: 0;"> ---------------------------------------------</div>

<!--  Carousel qui ne s'actualise pas à la fermeture de la pop up-->
      <%# <%= render "shops/carousel" %>

<!--  Carousel qui s'actualise âs à la fermeture de la pop up MAIS qui disparait pdt que la pop up est là-->

  <div class="shop">
    <%= render "shops/carousel" %>

    <div class="popup">
      <div class="d-flex justify-content-center">
        <%= image_tag "wheel_round.png", alt: "wheel", width: "120px", height: "120px" %>
      </div>

      <p class="text-center mb-0">------------------------------------</p>
      <h3 class="mb-3">&gt Items wheel! </h3>
        <%if @user.gold_count >= 400 %>
          <div class="d-flex justify-content-center">

          <%= link_to wheel_shops_path, data: {turbo_frame: :popup_shop }, action: :wheel, class: 'btn-orange-test mb-3' do %>
            LAUNCH: 400G
          <%end%>
          </div>

        <%else%>
          <div class="d-flex justify-content-center">
            <%= link_to "#", class: 'btn-blue-test' do %>
              NOT ENOUGH GOLD
            <% end %>

          </div>

        <%end%>

    </div>
  </div>
</div>


<% end %>










