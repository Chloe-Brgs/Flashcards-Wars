<%= turbo_frame_tag "popup_shop" do %>
  <div class="blur">
    <div class="modal-pop-up" id="small" data-controller="modals">
      <div data-modals-target="wheel">
        <div class="d-flex justify-content-center wheel-container">
          <%= image_tag "wheel_round.png", alt: "wheel", width: "142px", height: "142px", class:"wheel" %>
        </div>

        <br>
        <br>
        <h3 class="text-center">-----------------------</h3>
        <br>
        <h3>> Wheel is turning</h3>
        <h3> <%=@content%></h3>
      </div>

      <div data-modals-target="win" style="display: none;">
        <%= link_to "X", "#", data: {
        controller: "modals"
        # action: "modals#close"
      }, class: "cancel-button" %>
        <div class="d-flex justify-content-center">
          <%= cl_image_tag @item.photo.key, width: "142px", height: "142px"%>
        </div>
        <br>
        <h3 class="text-center">-----------------------</h3>
        <br>
        <h3 class="text-center"> > YOU WIN : <%=@item.name%></h3>
        <p > <%=@item.description%></p>
      </div>
    </div>
  </div>
<%end%>
