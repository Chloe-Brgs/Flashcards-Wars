
<div class="background-home">
  <div class="top-card-home">
    <div class="d-flex justify-content-center">
      <p>Level <%= @user.level_text %></p>
    </div>
    <div class="d-flex justify-content-center">
      <p>N° <%= @rank %> • <%= @user.gold_count %> G</p>
    </div>
    <div class="username-frame">
      <p><%=  @username  %> </p>
    </div>
  </div>


<%# Image of the avatar %>
  <div class="round-white">
    <%# <p>1</p> %>
      <%= image_tag @user.level_image, alt: @user.level_text, class: "robot" %>
  </div>

<%# Experience progress bar %>

<%# 3 %>
<%# <div class="progress-bar-container">
  <div class="progress-bar" style="width: <%= @user.progress_percentage %>
<%#  %>

<%# 4 %>
<div class="progress-circle-container">
  <svg class="progress-circle" width="287" height="287" viewBox="0 0 100 100">
    <circle class="progress-background" cx="50" cy="50" r="45"></circle>
    <circle class="progress-bar" cx="50" cy="50" r="45"
      stroke-dasharray="282.6"
      stroke-dashoffset="<%= 282.6 - (282.6 * @user.progress_percentage / 100) %>">
    </circle>
  </svg>
</div>

<%# button play and duel %>
  <div class="btn-play">
    <%= link_to trainings_path, class:"font-white-center" do %>
      <div class="btn-training">
        <p>TRAINING</p>
      </div>
    <% end %>
    <%= link_to home_path, class:"font-white-center" do %>
      <div class="btn-duel">
        <p>DUEL</p>
      </div>
    <% end %>
  </div>
</div>


