<div class="background-profile background-fixed">

  <div class="top_card d-flex justify-content-center align-items-end">
    <p>RANKING</p>
  </div>

  <div class="top-rank">
      <% @users_ordered.each_with_index do |user, index| %>
        <% if index < 8 %>
          <div class="rank-frame">
            <div>
              <%= "#{(index + 1)} - #{user.first_name.capitalize} #{user.last_name[0].upcase}." %>
            </div>
            <div>
              <%= "#{user.experience} XP" %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if !@users_ordered.first(8).include?(@current_user) %>
        <div class="rank-frame bottom-rank">
          <div>
            <%= "#{(@users_ordered.index(@current_user) + 1)} - #{@current_user.first_name.capitalize} #{@current_user.last_name[0].upcase}." %>
          </div>
          <div>
            <%= "#{@current_user.experience} XP" %>
          </div>
        </div>
      <% end %>
  </div>
</div>
