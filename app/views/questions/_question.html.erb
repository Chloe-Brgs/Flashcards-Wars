<%= turbo_frame_tag :question_answers do %>
  <div>
    <div>
      <h2> > QUESTIONS <%= @question.id %></h2>
      <p> > <%= @question.content %></p>
    </div>

    <ul>
      <% @possibilities.each do |possibility| %>
      <li><%= possibility.content %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to "next question",  subcategory_question_path(subcategory_id: @subcategory.id, id: @question.id.next ) %>
<% end %>
